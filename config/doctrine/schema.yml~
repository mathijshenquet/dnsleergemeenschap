ideaItem:
  columns:
    title: { type: string(255), notnull: true }
    body: { type: string(5000), notnull: true }
    type: { type: enum, values: [ Vraag, Probleem, Idee ], notnull: true }
    parent_id: { type: integer }
    user_id: { type: integer, notnull: true }
  relations:
    Followup:
      class: ideaItem
      local: parent_id
      foreign: id
      foreignAlias: Parent
    User:
      local: user_id
      foreign: id
      foreignAlias: Idea

ideaResponse:
  columns:
    body: { type: string(5000), notnull: true }
    user_id: { type: integer, notnull: true }
    item_id: { type: integer, notnull: true }
  relations:
    Item: { class: ideaItem, local: item_id, foreign: id, onDelete: CASCADE, foreignAlias: Response}
    User:
      local: user_id
      foreign: id
      foreignAlias: Idea